datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Receita {
  id             Int      @id @default(autoincrement())
  nome           String
  medico         String
  medicamentos   String   // vamos salvar o array como JSON string
  statusReceita  String   // “ativo” ou “inativo”
  dataCriacaoMedico DateTime
  created        DateTime @default(now())
  updated        DateTime @updatedAt
}
